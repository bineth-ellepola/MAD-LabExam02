<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">





        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!--  Notification 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Confirmed: Your booking at Travo Hotel has been confirmed."
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!--  Notification 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Offer: Get 20% off on your next hotel booking."
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!--  Notification 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Reminder: Don't forget your booking at Sea View Resort tomorrow."
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
